@model IEnumerable<Lagsoba94.Areas.Vote.Models.ViewModel.SingleVote>

<div class="row my-3 vote-result" style="position: relative;">
    <div class="col-12 col-sm-12 h-100 ">
        <div class="h-100">
            <h3 class="p-2 inline text-uppercase text-center">Votes in @ViewBag.PositionName</h3>

            @if (ViewBag.PositionActive)
            {
                if (Model.Count() > 0)
                {
                    <div class="table table-responsive">
                        <table class="table w-100 table-striped">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>S/N</th>
                                    <th>VOTERS</th>
                                    <th>VOTED FOR</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var vote in Model)
                                {
                                    <tr>
                                        <td scope="row">@vote.SN</td>
                                        <td>
                                            <div>
                                                <h5 class="result-t-title">@vote.VoterName <br> @vote.VoterPhone </h5>
                                            </div>
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(vote.VotedFor))
                                            {
                                                <h5 class="result-t-title">NO VOTE</h5>
                                            }
                                            else
                                            {
                                                <h5 class="result-t-title">@vote.VotedFor</h5>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <h3 class="text-center text-info">NO VOTES YET FOR THIS POSITION</h3>
                }
            }
            else
            {
                <div class="text-center">
                    <h3 class="text-danger">THIS POSITION HAS BEEN DEACTIVATED</h3>
                    <h5 class="text-info"><a href="~/vote/candidate">Click here to activate.</a></h5>
                </div>
            }
        </div>
    </div>

</div>
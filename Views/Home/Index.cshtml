@if (Model.News.Count() > 0)
{
    <!-- Lagsoba'94 blog -->
    <section class="section-blog my-5">
        <div class="container">
            <div class="row my-3">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="title text-center">
                        <span class="pre-title">Check out some of our latest blog post.</span>
                        <h2 class="text-uppercase">Read our news, comments &amp; thoughts</h2>
                        <p class="mb-0">
                            Our blog shares current news happening within the assosiation and notable exploits being
                            made by our members. Don't just take
                            our word for it. Read about yourself.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="blog-slider slider">
                        @foreach (var blog in Model.News)
                        {
                            <!-- blog widget -->
                            <div class="blog-widget">
                                <div class="blogpost-thumb">
                                    <a href="doctor-profile.html">
                                        <img class="img-fluid" alt="@blog.Headline" src="/@blog.ImageSrc">
                                    </a>
                                </div>

                                <div class="blog-content">
                                    <h6 class="blog-title my-3">
                                        @blog.Headline
                                    </h6>
                                    <p class="blog-body">
                                        @blog.Heading
                                    </p>

                                    <div class="align-text-bottom">
                                        <div class="my-2 post-info">
                                            <span class="post-date">@blog.UploadDate.ToLongDateString()</span>
                                        </div>

                                        <div class="row row-sm">
                                            <div class="col-6">
                                                <a href="~/blog/news?slug=@blog.Slug&id=@blog.NewsId" class="btn post-view-btn lift">Read More</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ./ blog widget ends -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Lagsoba'94 blog ends -->
}

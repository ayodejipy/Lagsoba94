@model Lagsoba94.Models.ViewModels.HomeVM

@{
    ViewBag.Title = "Home Page";
}

@*Message Info*@
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<style>
    .img-top-right {
        position: absolute;
        top: -2px;
        right: -12px;
        border-radius: 1px;
        padding: 0px 10px;
        height: auto;
        max-width: 100px;
    }

    .top-right {
        background-color: rgb(249, 233, 34);
        color: #726b18;
        border-radius: 13px;
        font-size: 0.775rem;
        font-weight: 500;
        padding: 2px 12px;
        letter-spacing: 2px;
        text-transform: uppercase;
        position: absolute;
        bottom: 18px;
        right: 10px;
    }

        .top-right span {
            font-size: 0.45rem;
            font-weight: 500;
            color: #726b18;
        }
</style>

<!-- carousel -->
<section id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/assets/img/slides/slide_1.jpg" class="d-block w-100" alt="Lagsoba'94 Set">
        </div>
        <div class="carousel-item">
            <img src="~/Content/assets/img/slides/slide_2.jpg" class="d-block w-100" alt="Lagsoba'94 Set">
        </div>
        <div class="carousel-item">
            <img src="~/Content/assets/img/slides/slide_3.jpg" class="d-block w-100" alt="Lagsoba'94 Set">
        </div>
        <div class="carousel-item">
            <img src="~/Content/assets/img/slides/slide_4.jpg" class="d-block w-100" alt="Lagsoba'94 Set">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</section>
<!-- /.carousel ends here -->

<!-- Welcome box -->
<section class="mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex flex-column welcome__wrapper">
                    <h5 class="text-uppercase">Welcome to</h5>
                    <h2 class="text-uppercase">Lagsoba'94.</h2>
                    <p>
                        Lagsoba'94 is envisioned to create a unique forum for the convention of all old boys who graduated from
                        Lagelu Grammar School, to have a common front in discussing the progress and development of our alma mata
                        as well as an interaction point to propel the well being and socio-economic progress of members.
                    </p>
                    <div class="d-flex flex-column align-items-end justify-content-end">
                        <a href="@Url.Action("about", "Home")" class="btn btn-success btn-cta shadow lift">
                            Read More <i class="fa fa-angle-right ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.Welcome box ends -->

<!-- about Lagsoba'94 -->
<section class="my-5" id="ChairmanSpeech">
    <div class="container">
        <div class="row my-5">
            <div class="col-12 col-md-6">
                <div class="row mt-4 mt-md-0">
                    <div class="col-5 offset-1 px-2 mb-3 align-self-end">
                        <img class="border-radius-3 wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.4s"
                             src="~/Content/assets/img/gallery/17.jpeg" alt=""
                             style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.4s; animation-name: fadeInUp;">
                    </div>
                    <div class="col-6 px-2 mb-3">
                        <img class="border-radius-3 wow fadeInRight" data-wow-duration="0.8s" data-wow-delay="0.6s"
                             src="~/Content/assets/img/gallery/15.jpeg" alt=""
                             style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.6s; animation-name: fadeInRight;">
                    </div>
                    <div class="col-7 px-2 mb-3">
                        <div class="border-radius-3 wow fadeInLeft bg-grad p-2 p-sm-3 p-lg-4 p-xl-5 all-text-white"
                             data-wow-duration="0.8s" data-wow-delay="0s"
                             style="visibility: visible; animation-duration: 0.8s; animation-delay: 0s; animation-name: fadeInLeft;">
                            <span class="text-uppercase">Our Motto:</span>
                            <h5 class="font-weight-bold">
                                “SEMPER OPTIMUM” <br>
                                (“ALWAYS THE BEST”)
                            </h5>
                        </div>
                    </div>
                    <div class="col-5 align-self-start pl-2 mb-3">
                        <img class="border-radius-3 wow fadeInDown" data-wow-duration="0.8s" data-wow-delay="0.2s"
                             src="~/Content/assets/img/gallery/7.jpeg" alt=""
                             style="visibility: visible; animation-duration: 0.8s; animation-delay: 0.2s; animation-name: fadeInDown;">
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div style="padding-top: 0px !important;" class="h-100 p-4 p-sm-1">
                    <div class="title chairman-speech text-left p-0">
                        <h2 class="text-uppercase mb-3"> Welcome text  <br /> from our Chairman </h2>
                        <div class="m-0 mt-3">
                            @Html.Raw(System.Web.HttpUtility.HtmlDecode(TempData["ChairmanSpeech"].ToString()))
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- /.about Lagsoba'94 -->


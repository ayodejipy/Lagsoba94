<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LAGSOBA'94 </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;500;600;700;800&family=Poppins:wght@200;300;400;600;700;800;900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&display=swap"
          rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- header/navigation bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow py-3">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src=@Url.Content("~/Content/assets/img/lags-logo.png") alt="logo">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span>MENU</span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "index", "home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Lagsoba'94
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("About us", "about", "home", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Members", "members", "home", null, new { @class = "dropdown-item" })
                                @*@Html.ActionLink("Projects", "projects", "home", null, new { @class = "dropdown-item" })*@
                            </div>

                        </li>


                        @Html.Action("EventsNavPartial", "Home")

                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "contact", "home", null, new { @class = "nav-link" })
                        </li>

                        @Html.Partial("_LoginPartial")
                    </ul>

                </div>
            </div>
            <!-- /.container ends -->
        </nav>
    </header>
    <!-- header/navigation bar -->
    <div class="body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="mt-3 text-white bg-dark">
        <div class="container">
            <div class="row p-4">
                <div class="col-12 col-md-4 col-lg-4 footer-cols">

                    <!-- Brand -->
                    <h5 class="text-uppercase">Lagsoba'94.</h5>

                    <!-- Text -->
                    <p class="text-gray-700 mt-3">
                        @Html.Action("_VisionStatement", "Home")
                    </p>

                    <!-- Social -->
                    @*<ul class="list-unstyled list-inline list-social mb-6 mb-md-0">
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="/Content/assets/img/icons/social/instagram.svg" class="list-social-icon" alt="...">
                                </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="/Content/assets/img/icons/social/facebook.svg" class="list-social-icon" alt="...">
                                </a>
                            </li>
                            <li class="list-inline-item list-social-item mr-3">
                                <a href="#!" class="text-decoration-none">
                                    <img src="/Content/assets/img/icons/social/twitter.svg" class="list-social-icon" alt="...">
                                </a>
                            </li>
                            <li class="list-inline-item list-social-item">
                                <a href="#!" class="text-decoration-none">
                                    <img src="/Content/assets/img/icons/social/pinterest.svg" class="list-social-icon" alt="...">
                                </a>
                            </li>
                        </ul>*@

                </div>

                <div class="col-6 col-md-4 col-lg-2">
                    <!-- Heading -->
                    <h6 class="font-weight-bold text-uppercase text-gray-700">
                        ASSOCIATION
                    </h6>
                    <!-- List -->
                    <ul class="list-unstyled text-muted mt-3 mb-6 mb-md-8 mb-lg-0">
                        <li class="mb-1">
                            @Html.ActionLink("Home", "index", "home", null, new { @class = "text-white-50" })
                        </li>
                        <li class="mb-1">
                            @Html.ActionLink("About us", "about", "home", null, new { @class = "text-white-50" })
                        </li>
                        <li class="mb-1">
                            @Html.ActionLink("Members", "members", "home", null, new { @class = "text-white-50" })
                        </li>
                        <li class="mb-1">
                            @Html.ActionLink("Contact us", "contact", "home", null, new { @class = "text-white-50" })
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="mb-1">
                                @Html.ActionLink("Login", "login", "account", null, new { @class = "text-white-50" })
                            </li>
                        }
                    </ul>
                </div>

                <div class="col-6 col-md-4 col-lg-2">
                    <!-- Heading -->
                    <h6 class="font-weight-bold text-uppercase text-gray-700">
                        ACTIVITY
                    </h6>

                    <!-- List -->
                    <ul class="list-unstyled text-muted mt-3 mb-6 mb-md-8 mb-lg-0">
                        <li class="mb-1">
                            @Html.ActionLink("News", "index", "blog", null, new { @class = "text-white-50" })
                        </li>
                        @*<li class="mb-1">
                                @Html.ActionLink("Events", "events", "home", null, new { @class = "text-white-50" })
                            </li>
                            <li class="mb-1">
                                @Html.ActionLink("Projects", "projects", "home", null, new { @class = "text-white-50" })
                            </li>*@
                        <li class="mb-1">
                            @Html.ActionLink("Gallery", "gallery", "home", null, new { @class = "text-white-50" })
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="d-flex center p-4 p-sm-2 footer-copyright">
            <span> &copy; Copyright <a href="#">LAGSOBA'94</a>. All Rights Reserved. </span>
        </div>
    </footer>
    <!-- /.Footer ends -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    @*<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>*@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
